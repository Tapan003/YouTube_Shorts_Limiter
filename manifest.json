{
  "manifest_version": 3,
  "name": "YouTube Shorts Toggler",
  "version": "1.0",
  "description": "A simple extension to toggle YouTube Shorts.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}